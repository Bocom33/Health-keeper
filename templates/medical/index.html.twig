{% extends 'base.html.twig' %}

{% block title %}Medical Record{% endblock %}
{% block stylesheets %}
    <style>
        .card-register {
            max-width: 65vh;
        }

        .card {
            position: relative;
            display: flex;
            flex-direction: column;
        }

        .card-title {
            text-align: center !important;
            color: #5eb5e0;
            font-weight: bold;
            margin-top: 10px;

        }

        .text-center {
            text-align: center !important;
        }

        .input-group {
            position: relative;
            display: flex;
            flex-wrap: wrap;
        }
        .input-group-text {
            display: flex;
            align-items: center;
        }

        .input-group-prepend {
            width: 100%;
            height: 38px;
        }

        .form-group {
            margin-bottom: 1rem;
            width: 50vh;
        }

        .form-control {
            width: 100%;
        }

        .divider-text {
            position: relative;
            text-align: center;
            margin-top: 15px;
            margin-bottom: 15px;
        }
        .divider-text span {
            padding: 7px;
            font-size: 12px;
            position: relative;
            z-index: 2;
        }
        .divider-text:after {
            content: "";
            position: absolute;
            width: 100%;
            border-bottom: 1px solid #ddd;
            top: 55%;
            left: 0;
            z-index: 1;
        }

        .btn-center {
            display: flex;
            align-items: center;
        }
.row{
    margin-left: 15rem;
    margin-top: 8rem;
}
        .btn-form{
            margin-left: 20rem;
        }



    </style>
{% endblock %}

{% block body %}

    {% form_theme form 'bootstrap_4_layout.html.twig' %}

    <br>
    <br>
    <h1 class="card-title mt-3 text-center" >Votre douleur est situ√©e au niveau de votre/vos {{ zone.name }}</h1>

    {{ form_start(form) }}
    <h4 class="card-title mt-3 text-center"></h4>
    <div class="row ">
    <div class="form-group input-group">
        <div class="input-group-prepend">


        </div>
    </div>
        {{ form_widget(form) }}
    </div>
    <div class="text-center btn-form">
        <button type="submit" class="btn btn-primary" >Enregistrer</button>
    </div>
    {{ form_end(form) }}
{% endblock %}
